	file = {Full Text:/Users/cdmuir/Zotero/storage/WLWBL37F/Martínez-Gómez et al. - 2024 - Commonly used Bayesian diversification methods lead to biologically meaningful differences in branch.pdf:application/pdf},
}

@article{morlon_phylogenetic_2024,
	title = {Phylogenetic {Insights} into {Diversification}},
	volume = {55},
